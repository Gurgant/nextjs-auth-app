{
  "name": "nextjs-auth-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "db:setup": "pnpm prisma:generate && pnpm prisma:push",
    "db:push:dev": "DATABASE_URL='postgresql://postgres:postgres123@localhost:5432/nextjs_auth_db' prisma db push",
    "db:push:test": "DATABASE_URL='postgresql://postgres:postgres123@localhost:5433/nextjs_auth_db' prisma db push",
    "db:setup:all": "./scripts/setup-databases.sh",
    "db:reset:test": "DATABASE_URL='postgresql://postgres:postgres123@localhost:5433/nextjs_auth_db' prisma db push --force-reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm typecheck",
    "create-user": "tsx scripts/create-user.ts",
    "migrate-users": "tsx scripts/migrate-user-metadata.ts",
    "validate-translations": "node scripts/validate-translations.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "pnpm format:check && pnpm validate-translations && pnpm typecheck && pnpm lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:full": "jest --config jest.config.coverage.js",
    "test:ci": "pnpm test:unit && pnpm test:integration && pnpm lint && pnpm typecheck",
    "test:all:complete": "pnpm test:unit && pnpm test:integration && pnpm test:e2e && pnpm perf:quick",
    "test:unit": "jest src/test/unit",
    "test:integration": "DATABASE_URL='postgresql://postgres:postgres123@localhost:5433/nextjs_auth_db' jest src/test/integration/__tests__/auth.integration.real.test.ts",
    "test:hybrid:mock": "TEST_MODE=mock jest src/test/hybrid",
    "test:hybrid:real": "TEST_MODE=real DATABASE_URL='postgresql://postgres:postgres123@localhost:5433/nextjs_auth_db' jest src/test/hybrid",
    "test:all": "pnpm test:unit && pnpm test:hybrid:mock",
    "test:all:real": "pnpm test:unit && pnpm test:integration && pnpm test:hybrid:real",
    "test:e2e": "playwright test --workers=1",
    "test:e2e:headed": "playwright test --workers=1 --headed",
    "test:e2e:debug": "playwright test --workers=1 --debug",
    "test:e2e:ui": "playwright test --workers=1 --ui",
    "test:e2e:chromium": "playwright test --workers=1 --project=chromium",
    "test:e2e:firefox": "playwright test --workers=1 --project=firefox",
    "test:e2e:webkit": "playwright test --workers=1 --project=webkit",
    "docs:shots": "DOCS_SCREENSHOTS=true PLAYWRIGHT_BASE_URL=http://localhost:3000 playwright test e2e/docs/documentation-screenshots.spec.ts --project=chromium-docs --workers=1",
    "docs:shots:headless": "DOCS_SCREENSHOTS=true PLAYWRIGHT_BASE_URL=http://localhost:3000 playwright test e2e/docs/documentation-screenshots.spec.ts --project=chromium-docs --workers=1 --headed=false",
    "perf:load": "artillery run performance-tests/configs/auth-load-test.yml --output performance-tests/results/load-test.json",
    "perf:stress": "artillery run performance-tests/configs/stress-test.yml --output performance-tests/results/stress-test.json",
    "perf:report": "artillery report performance-tests/results/load-test.json",
    "perf:quick": "artillery quick --count 10 --num 50 http://localhost:3000/en",
    "prod:check": "node scripts/production-readiness-check.js",
    "prod:setup": "cp .env.production.template .env.production && echo 'Please edit .env.production with your actual values'",
    "prod:deploy": "pnpm prod:check && pnpm build && echo 'Build successful - ready for deployment'",
    "prisma:deploy": "prisma migrate deploy && prisma generate",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@auth/prisma-adapter": "2.10.0",
    "@prisma/client": "6.14.0",
    "@types/crypto-js": "^4.2.2",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.541.0",
    "negotiator": "1.0.0",
    "next": "15.5.0",
    "next-auth": "5.0.0-beta.29",
    "next-intl": "4.3.5",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "resend": "^6.0.1",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/k6": "^1.2.0",
    "@types/negotiator": "0.6.4",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "autoprefixer": "10.4.21",
    "dotenv": "^17.2.1",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "k6": "^0.0.0",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prisma": "6.14.0",
    "tailwindcss": "4.1.12",
    "tsx": "^4.20.5",
    "typescript": "5.9.2"
  }
}
